{
  "name": "solia",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter backend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "docker": "docker-compose up --build",
    "test": "pnpm --filter backend test",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf node_modules **/dist **/build",
    "solia:dev": "concurrently -k -n BACKEND,FRONTEND -c blue,green \"pnpm --filter @solia/backend dev\" \"pnpm --filter @solia/frontend dev\"",
    "solia:build": "pnpm --filter @solia/backend build && pnpm --filter @solia/frontend build",
    "solia:deploy": "echo \"Use CI/CD pipelines for deployment\""
  },
  "devDependencies": {
    "@playwright/test": "^1.53.1",
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^8.0.0",
    "dotenv": "^16.5.0",
    "eslint": "^8.57.1",
    "rimraf": "^5.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@faker-js/faker": "^9.8.0",
    "bcrypt": "^6.0.0"
  }
}
