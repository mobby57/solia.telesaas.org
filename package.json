{
  "name": "solia",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n frontend,backend -c blue,green \"pnpm --filter frontend dev\" \"pnpm --filter backend dev\"",
    "dev:frontend": "pnpm --filter frontend dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm build:frontend && pnpm build:backend",
    "build:frontend": "pnpm --filter frontend build",
    "build:backend": "pnpm --filter backend build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc -b",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.yml up --build",
    "db:seed": "pnpm --filter backend run seed"
  },
  "devDependencies": {
    "@types/react": "^19.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "concurrently": "^8.2.0",
    "eslint": "^9.29.0",
    "prettier": "^3.0.3",
    "prisma": "^6.10.1",
    "typescript": "^5.2.2",
    "vitest": "^1.2.0"
  },
  "overrides": {
    "@humanwhocodes/config-array": "0.13.0",
    "@humanwhocodes/object-schema": "2.0.3",
    "glob": "7.2.3",
    "inflight": "1.0.6",
    "rimraf": "3.0.2"
  }
}
